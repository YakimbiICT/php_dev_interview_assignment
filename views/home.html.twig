{% extends 'base.html.twig' %}

{% block title %}Yakimbi - Home{% endblock %}

{% block stylesheet %}
    <link href="/bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="/css/main.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <script type="text/template" id="is-favorite-true">
        {% include '_is-favorite-true.html.twig' %}
    </script>
    <script type="text/template" id="is-favorite-false">
        {% include '_is-favorite-false.html.twig' %}
    </script>
    <div class="container well">
        <div class="main row">
            <div class="span12">
                <table class="table table-bordered">
                    {% set k=0 %}
                    {% for i in range(0, 4) %}
                        <tr>
                            {% for j in range(0, 3) %}
                                {% set photo = photos[k] %}
                                {% set k = k+1 %}
                                <td width="20%" data-id="{{photo.id}}" class="image">
                                    <a href="{{photo.pageUrl}}" target="_blank">
                                        <img src="{{photo.url}}" />
                                    </a><br/>
                                    {% if photo.is_favorite %}
                                        {% include '_is-favorite-true.html.twig' %}
                                    {% else %}
                                        {% include '_is-favorite-false.html.twig' %}
                                    {% endif %}
                                    {#{photo.title}#}
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script src="/js/jquery-1.8.2.min.js"></script>
    <script src="http://ajax.cdnjs.com/ajax/libs/underscore.js/1.3.1/underscore-min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script src="/js/backbone-min.js"></script>
    <script src="/js/app.js"></script>
{% endblock %}
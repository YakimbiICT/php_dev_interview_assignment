<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".HomeActivity" >

    <include layout="@layout/component_favorite_gallery"/>
    
    <include layout="@layout/component_random_gallery"/>

    <LinearLayout
        android:id="@+id/generatePanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/generateFlikrButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/generate_from_flikr" />

        <Button
            android:id="@+id/generateInstagramButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/generate_from_instagram" />
    </LinearLayout>

</LinearLayout>